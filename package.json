{
  "name": "putaway-app",
  "version": "1.1.0",
  "description": "Putaway Bin Transfer System - Standalone",
  "private": true,
  "author": "Newly Weds Foods Thailand",
  "license": "PRIVATE",
  "scripts": {
    "dev:backend": "cd backend && cargo run",
    "dev:frontend": "cd frontend && npm start",
    "dev:all": "echo 'Run backend and frontend in separate terminals'",
    "install:frontend": "cd frontend && npm install",
    "build:backend": "cd backend && cargo build --release",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "test:backend": "cd backend && cargo test",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
