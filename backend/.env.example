# =============================================================================
# Putaway Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
DATABASE_SERVER=your-database-server.example.com
DATABASE_PORT=1433
DATABASE_NAME=BME882024
DATABASE_USERNAME=your_username
# SEC-003: Never use default passwords - set a strong password
DATABASE_PASSWORD=your_secure_password_here

# Connection Pool Settings (Optional)
DATABASE_MAX_CONNECTIONS=80
DATABASE_MIN_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT_SECS=10

# =============================================================================
# JWT Configuration (REQUIRED)
# =============================================================================
# SEC-002: Generate a secure secret with: openssl rand -base64 64
# IMPORTANT: Use the SAME JWT_SECRET as Bulk-Picking for shared auth
JWT_SECRET=generate_with_openssl_rand_base64_64

# SEC-006: Token duration in hours (default: 24h)
JWT_DURATION_HOURS=24

# JWT Issuer (Optional)
JWT_ISSUER=NWFTH-Putaway

# =============================================================================
# LDAP/Authentication Configuration
# =============================================================================
# Use LDAPS (LDAP over SSL/TLS) for production
# Default port for LDAPS is 636, plain LDAP is 389
LDAP_URL=ldaps://your-ldap-server.example.com:636
LDAP_BASE_DN=DC=YOURDOMAIN,DC=com
LDAP_ENABLED=true

# LDAP SSL/TLS Settings
# Set to true to enable LDAPS (uses LDAP_URL with ldaps://)
LDAP_USE_SSL=true

# Certificate verification
# true = verify certificate (requires valid/trusted cert)
# false = skip verification (for internal networks with self-signed certs)
LDAP_SKIP_VERIFY=true

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_HOST=0.0.0.0
# PUTAWAY: Port 4402 (separated from original 4400)
SERVER_PORT=4402

# =============================================================================
# CORS Configuration (SEC-004)
# =============================================================================
# Comma-separated list of allowed origins
# DO NOT use * in production!
# PUTAWAY: Port 4202 for frontend
CORS_ORIGINS=http://localhost:4202,http://your-server-ip:4202

# =============================================================================
# Application Logging
# =============================================================================
RUST_LOG=info
RUST_ENV=production

# =============================================================================
# Application Info
# =============================================================================
APP_NAME=Putaway System
APP_VERSION=1.0.0
COMPANY_NAME=Newly Weds Foods Thailand
